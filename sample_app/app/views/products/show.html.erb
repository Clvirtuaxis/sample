<% if notice %>
<p class="alert fade in alert-warning alert-dismissible" role="alert"><%= notice %></p>
<% end %>

<div class="text">
</div>
<div class="container">
<div class="product">

	<div class="title">
		<strong>Name: </strong>
		<%= @product.name %>
	</div>

	<div class="price">
		<strong><%= @product.price %>&#36;</strong>
	</div>

	<div class="image">
		<center><%= image_tag(@product.image_url, class: "img-responsive") %></center>
	</div>

	<div class="description">
		<p>
		<strong>Description: </strong>
		<%= @product.description %>
		</p>
	</div>

	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="thumbnail">

					<p><%= @product.highest_rating_comment.try(:rating) %></p>
					<%= render partial: "new_comment" %>

					<%= render partial: "comments" %>

				</div>
 			</div>
		</div>
	</div>
</div>

<div class="edit">
<button><%= link_to 'Edit', edit_product_path(@product) %></button>
<button><%= link_to 'Back', products_path %></button>
</div>
</div>
