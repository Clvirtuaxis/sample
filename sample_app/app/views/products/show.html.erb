<p id="notice"><%= notice %></p>

<div class="container">

	<div class="title">
		<strong>Name: </strong>
		<%= @product.name %>
	</div>

	<div class="price">
		<strong><%= @product.price %></strong>
	</div>

	<div class="image">
		<center><%= image_tag(@product.image_url, class: "img-responsive") %></center>
	</div>

	<div class="description">
		<p>
		<strong>Description: </strong>
		<%= @product.description %>
		</p>
	</div>




</div>

<button><%= link_to 'Edit', edit_product_path(@product) %></button>
<button><%= link_to 'Back', products_path %></button>
