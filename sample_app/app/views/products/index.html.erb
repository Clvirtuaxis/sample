<p id="notice"><%= notice %></p>


<h1>Products</h1>


<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="item">  
        <div class="title"><%= product.name %></div>
        <div class="image"><center><%= image_tag(product.image_url, class: "img-responsive") %></center></div>
        <div class="description"><%= product.description %></div>
        <div class="row edit">
          <div class="col-xs-4">
            <button><%= link_to 'Show', product %></button>
          </div>
          <div class="col-xs-4">
            <button><%= link_to 'Edit', edit_product_path(product) %></button>
          </div>
          <div class="col-xs-4">
            <button><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </div>
      </div>
    </div>
      <% end %>

  </div>  <!-- div row -->
</div> <!-- div container-fluid -->

<br>

<button><%= link_to 'New Product', new_product_path %></button>

