<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comment" %><br>
      <%= f.text_area :body, cols: 40, rows: 7, class: "comment_area" %>
    </p>
    <p>
      <div class="rating"></div>
    </p>  
    <p>
      <%= f.submit "Submit", class: "btn_actions" %>
    </p>
  <% end %>
<% end %>