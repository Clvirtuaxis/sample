<div class="login_background">
  <div class="text">
    <h1>Log in</h1>
  </div>

  <div class="sign_up">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "my_label" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: "my_label" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, class: "my_label" %>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn_actions" %>
  </div>
  <% end %>

  <div class="sign_in">
    <%= render "devise/shared/links" %>
  </div>
</div>

